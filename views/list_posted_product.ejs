		<style type="text/css">
			/*-- acouunt--*/
			.user-posts td{
				padding: 20px;
			}
			.user-posts thead{
				background: #d23630;
				color: #FFFFFF;
			}
			.user-posts{
				border: 1px solid #e5e7ed;
			}
			.user-posts tbody tr{
				border-bottom: 1px solid #e5e7ed;
			}
			.user-posts .pending{
				color: #d33730;
				font-weight: bold;
			}
			.user-posts .accept{
				color: #117711;
				font-weight: bold;
			}
			.user-posts .refuse{
				color: #969696;
