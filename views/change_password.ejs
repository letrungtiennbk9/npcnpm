	<script type="text/javascript">
		$('.btn-update-password').click(function(e){
			e.preventDefault();
			var cur_password = $('input[name="cur_password"]').val();
			var password = $('input[name="password"]').val();
			var password2 = $('input[name="password2"]').val();
			$.ajax({
				url: '/users/doi-mat-khau',
				type:'post',
				data:{cur_password:cur_password,password:password,password2:password2},
				dataType: 'json',
			}).done(function(res){
				location.href='/users';

			}).fail(function(res){
				var ms = res.responseJSON;
				if(res.status==422){
					ms.errors.forEach(function(error){
						var error_msg = error.msg;
						$('.invalid-'+error.param).html(error_msg).show();
					})
				}
				else{
					alert('Lỗi. Thử lại sau!');
				}
			})
		});
	</script>

